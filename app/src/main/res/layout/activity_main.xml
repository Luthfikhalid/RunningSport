<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.khalid.runningsport.MainActivity">
    android:orientation="vertical">

    <ImageView
        android:id="@+id/mImageMartabak"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_200"
        android:layout_marginBottom="@dimen/text_8"
        android:scaleType="centerCrop"
        android:src="@mipmap/iya" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/mImageMartabak"
        android:orientation="vertical"
        android:padding="@dimen/text_8">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/text_8"
            android:onClick="onClickPesan"
            app:cardCornerRadius="@dimen/text_empat">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/text_enam">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tint="#B71C1C"
                    app:srcCompat="@drawable/ic_attach_money_black_24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/text_8"
                    android:text="@string/order1"
                    android:textColor="#757575"
                    android:textSize="@dimen/text_20" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/text_8"
            android:onClick="onClickTOpMenu"
            app:cardCornerRadius="@dimen/text_empat">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/text_enam">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tint="#B71C1C"
                    app:srcCompat="@drawable/ic_library_books_black_24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/text_8"
                    android:text="@string/TB1"
                    android:textColor="#757575"
                    android:textSize="@dimen/text_20" />

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</RelativeLayout>